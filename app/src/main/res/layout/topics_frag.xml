<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorChat"
    tools:context=".MainActivity">

    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="370dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView2"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/board"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/board" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board"
            android:layout_alignParentRight="true"
            android:layout_margin="13dp"
            android:text="Vuốt lên để xem thêm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/topics_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Chọn chủ đề \n mà bạn muốn trả lời: "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/literature_button"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:background="@drawable/literature_icon"
                android:textColor="@color/black"
                android:layout_margin="0dp"
                android:text="Văn học"
                android:textAlignment="center"
                android:textSize="30dp"
                android:onClick="chooseTopic"
                />

            <Button
                android:id="@+id/math_button"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:background="@drawable/math_icon"
                android:text="Toán học"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="15dp"
                android:onClick="chooseTopic"
                />

            <Button
                android:id="@+id/sports_button"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_icon"
                android:text="Thể thao"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="15dp"
                android:onClick="chooseTopic"
                />

            <Button
                android:id="@+id/economics_button"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/economy_icon"
                android:text="Kinh tế"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="15dp"
                android:onClick="chooseTopic"
                />

            <Button
                android:id="@+id/music_button"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:background="@drawable/music_icon"
                android:text="Âm nhạc"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="15dp"
                android:onClick="chooseTopic"
                />

            <Button
                android:id="@+id/geography_button"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:background="@drawable/geography_button"
                android:text="ĐỊA LÝ"
                android:textAlignment="center"
                android:textSize="30dp"
                app:cornerRadius="15dp"
                android:onClick="chooseTopic"
                />
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>