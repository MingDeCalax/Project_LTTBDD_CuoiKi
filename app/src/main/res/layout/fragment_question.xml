<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorChat"
    tools:context=".MainActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/determinateBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:progress="100"/>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/question">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/board"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="9dp"
            android:text="Câu hỏi số 1: "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/question_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="300dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="fill_parent"
            android:layout_below="@id/question"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/a_button"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_button"
                android:onClick="submitAnswer"
                android:tag="1"
                android:text="A"
                android:textAlignment="center"
                android:textSize="22dp" />

            <Button
                android:id="@+id/b_button"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_button"
                android:onClick="submitAnswer"
                android:tag="2"
                android:text="B"
                android:textAlignment="center"
                android:textSize="22dp" />

            <Button
                android:id="@+id/c_button"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_button"
                android:onClick="submitAnswer"
                android:tag="3"
                android:text="C"
                android:textAlignment="center"
                android:textSize="22dp" />

            <Button
                android:id="@+id/d_button"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_button"
                android:onClick="submitAnswer"
                android:tag="4"
                android:text="D"
                android:textAlignment="center"
                android:textSize="22dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/next_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/grey_button"
        android:clickable="false"
        android:gravity="center"
        android:onClick="terminateQuestion"
        android:text="Next"
        android:textAlignment="center"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_scroll" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="5"
        android:outlineAmbientShadowColor="@color/colorChat"
        android:progress="1"
        android:progressTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>