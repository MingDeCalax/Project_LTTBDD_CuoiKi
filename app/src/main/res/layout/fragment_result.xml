<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/result_bg">

    <ImageView
        android:id="@+id/leaderboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leaderboard_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:background="@drawable/result_bg2"
        app:layout_constraintTop_toBottomOf="@id/leaderboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:paddingTop="5dp"
                android:text="KẾT QUẢ"
                android:textAlignment="center"
                android:textColor="@color/colorButton"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/your_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="5/5"
                android:textColor="@color/colorButton"
                android:textSize="90dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/topic_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="CHỦ ĐỀ - ĐỘ KHÓ"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/mess"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/copiedtext"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="20dp"

                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/copyButton"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/copy_button"
                    android:onClick="copy"
                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/replay"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Chơi lại"
                    android:background="@drawable/medium_button"
                    android:onClick="replay"/>
            </LinearLayout>




            </LinearLayout>






    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>